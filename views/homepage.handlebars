<div class="row">
    {{#each posts as |post|}}
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/post/{{post.id}}">{{post.title}}</a>
                </h5>
                <p class="card-text">{{post.content}}</p>
                <div class="card-footer text-muted">
                    Posted by {{post.user.username}} on {{format_date post.created_at}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div> 